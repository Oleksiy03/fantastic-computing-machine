def luckynum(n,list):
    while n!=0:
        k=(n%10)
        if k not in list:
            return False
        n//=10
    return True    

def valueCheck(s):
    while True:
        try:
            n=int(s)
            if n < 0:
                raise ValueError
            break
        except ValueError:
            s = input("Input a positive integer: ")
    return n 

while True:
    count=0
    c=input('type in a number (n) to run the programme or q to quit\n')
    if c=='q':
        break
    else:
        n=valueCheck(c)
        for i in range(1, n+1):
            if luckynum(i,[4,7]): 
                count+=1
        print('the amount of lucky nums is: ', count)
