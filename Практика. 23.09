def inputMatrix(size):
    print('input the elements of the matrix')
    x=[]
    while len(x) < size:
        y=[]
        s=input().split() #ділить по символу роздільника
        for j in s:
            try:
                y.append(float(j))
            except ValueError:
                pass
        if len(y)==size:
            x.append(y)
    return x

def Print(matrix):
    for row in matrix:
        for el in row:
            print(el, end='  ')
        print()

def valueCheck(s):
    while True:
        try:
            n = int(input(s))
            if n <= 1:
                print("the size isn't supposed to be lesser than 2")
                continue
            break
        except ValueError:
            pass
    return n 

def MaxOfMin(matrix):
    n = len(matrix)
    minel = []
    for i in range(n):
        if matrix[i][i]<0:
            m=matrix[i][0]
            for j in range(1, n):
                if matrix[i][j]<m:
                    m=matrix[i][j]
            minel.append(m)
 
    if len(minel)>0:            
        m=minel[0]
        for i in minel:
            if i>m:
                m=i
        return(True, m)
    else:
        return(False, 0)
 
while True:
    a=input('Type in 1 to input a matrix yourself\n Or type in 0 to exit\n')
    if a == '0':
        break
    elif a == '1':
        n = valueCheck("input the matrix's size: ")
        matrix = inputMatrix(n)
        Print(matrix)
        t,z = MaxOfMin(matrix)
        if t:
            print('The max of the mins is: ', z)
        else:
            print('there are no rows with negative elements on the main diagonal')
    else:
        print('Your input was incorrect, please try again')
