    x=[[rnd.randint(a,b) for j in range(n)] for i in range(n)]
    for row in x:
        for el in row:
            print(el, end='  ')
        print()
    return x
 
def binary_search(mas, k):
    mid = len(mas) // 2
    low = 0
    high = len(mas) - 1
    operation = 1
    result = []
    while mas[mid][0] != k and low <= high:
        operation +=1
        if k > mas[mid][0]:
            operation += 1
            low = mid + 1
        else:
            high = mid - 1
            operation += 1
        mid = (low + high) // 2
 
    if low > high:
        print("Element ", k, " is not in the array!")
    else:
        print("Number of operations: ", operation)
        result.append((mas[mid][1], mas[mid][2]))
    return result
 
def bubbleSort(arr):
    n = len(arr)

    # Traverse through all array elements
    for i in range(n-1):
    # range(n) also work but outer loop will repeat one time more than needed.

        # Last i elements are already in place
        for j in range(0, n-i-1):

            # traverse the array from 0 to n-i-1
            # Swap if the element found is greater
            # than the next element
            if arr[j] > arr[j + 1] :
                arr[j], arr[j + 1] = arr[j + 1], arr[j]
 
def transform(matrix):
    n=len(matrix)
    l=[(matrix[i][j], i, j)for j in range(n) for i in range(n)]
    bubbleSort(l)
    return(l)
 
