import random as rnd
 
def input_matrix():
    x=[]
    while True:
        try:
            n=int(input("Type in the matrix's size: "))
            break
        except ValueError:
            pass
            #print('the value must be an integer')
    for i in range(n):
        y=[]
        s=input().split() #ділить по символу роздільника
        for j in s:
            y.append(float(j))
        if len(y)==n:
            x.append(y)
    return x
 
def gen_matrix():
    while True:
        try:
            n=int(input("Type in the matrix's size: "))
            break
        except ValueError:
            pass
    while True:
        try:
            a=int(input("Type in the start of the range: "))
            break
        except ValueError:
